<h2>List of Words</h2>

<% @list.each do |word| %>
  <h4><a href="/words/<%= word.id %>"><%= word.input_definition %> <%= word.input_word %></a></h4>
<% end %>

<h4>Add a new word</h4><br>

<form action="/" method="post">
  <div class="form-group">

    <label for="word">Enter Word</label>
    <input id="word" name="word" class="form-control" type="text"><br>

    <label for="definition">Enter your definition of the word!</label>
    <input id="definition" name="definition" class="form-control" type="text"><br>

  </div>

  <button type="submit" class="btn btn-info">Submit!</button>
</form><br><br>
